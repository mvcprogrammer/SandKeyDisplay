                        </div>
                        <div id="id_info_center" style="text-align:center;">
                            <input id="id_mls_num" type="hidden" value="@Model.ListingKey" />
                            <input id="id_email_input" value="" style="background-color:#2F2F2F; border:2px solid #AA9C79; border-radius:8px; color:#FF8503; font-size:40px; min-width:800px; text-align:center;" /><button id="id_send_email_res_details" style="background-color: rgb(47, 47, 47); color: rgb(255, 133, 3); border: 2px solid #AA9C79; border-radius: 8px 8px 8px 8px; font-size: 36px; margin-left: 50px;">SEND</button><button class="keyboard-command" id="CLS" style="background-color: rgb(47, 47, 47); color: rgb(255, 133, 3); border: 2px solid #AA9C79; border-radius: 8px 8px 8px 8px; font-size: 36px; margin-left: 15px;">CANCEL</button>
                        </div>
                    </div>
                </div>
                <div class="waterfront-information">
                    <div class="waterfront-information-header">Waterfront Information</div>
                    <div class="waterfront-information-details">
                        <div class="waterfront-info-left-col">Type:</div><div class="waterfront-info-right-col">&nbsp;@string.Join(",", Model.WaterfrontFeatures)</div>
                    </div>
                </div>
                <div class="property-information">
                    <div class="property-information-header">Property Information</div>
                    <div class="property-information-details">
                        <div class="property-info-left-col">Type:</div><div class="property-info-right-col">&nbsp;@Model.PropertySubType</div>
                        <div class="property-info-left-col">Bedrooms:</div><div class="property-info-right-col">&nbsp;@Model.BedroomsTotal</div>
                        <div class="property-info-left-col">Bathrooms:</div><div class="property-info-right-col">&nbsp;@Model.BathroomsFull Full, @Model.BathroomsHalf Half</div>
                        <div class="property-info-left-col">Year Built:</div><div class="property-info-right-col">&nbsp;@Model.YearBuilt</div>
                        <div class="property-info-left-col">Living Area:</div><div class="property-info-right-col">&nbsp;@Model.GetLivingArea Sq. Ft.</div>
                        <div class="property-info-left-col">Price:</div><div class="property-info-right-col">&nbsp;@($"{Model.GetListPrice}")</div>
                    </div>
                </div>
            </div>
            <div class="property-features">
                <div class="property-features-header">Features</div>
                @{}
                <div class="property-features-left-col">Community:</div><div class="property-features-right-col">&nbsp;@string.Join(", ", Model.CommunityFeatures)</div>
                <div class="property-features-left-col">Exterior:</div><div class="property-features-right-col">&nbsp;@string.Join(", ", Model.ExteriorFeatures)</div>
                <div class="property-features-left-col">Pool:</div><div class="property-features-right-col">&nbsp;@string.Join(", ", Model.PoolFeatures)</div>
                <div class="property-features-left-col">Garage:</div><div class="property-features-right-col">&nbsp;@Model.GetHasGarage</div>
                <div class="property-features-left-col">Interior:</div><div class="property-features-right-col">&nbsp;@string.Join(", ", Model.InteriorFeatures)</div>
                <div class="property-features-left-col">Pets:</div><div class="property-features-right-col">&nbsp;@string.Join(", ", Model.PetsAllowed)</div>
            </div>
            <div style="clear:left;"></div>
            <div class="property-photo-area-small">
                @{
                    for (int nCurPhoto = 0; nCurPhoto < Model.Media?.Count; nCurPhoto++)
                    {
                        <div><img class="property-photo-small" id="@Model.Media?[nCurPhoto].MediaUrl" style="border:1px solid #FFFFFF;" src="@Model.Media?[nCurPhoto].MediaUrl" alt="Loading..." width="110" /></div>
                        if (nCurPhoto == 9)
                        {
                            break;
                        }
                    }
                }
            </div>
            <div style="clear:both;"></div>
            <div class="public-remarks">@Model.PublicRemarks</div>
            <div class="reprocity">IDX information provided by MFRMLS&reg; and is provided for personal non-commercial use. Data last refreshed on @Model.LastModification Listing details provided by @Model.ListOfficeName</div>
        </div>
    </div>
